import React from 'react';
import styled, { ThemeProvider } from 'styled-components'; 
import { GlobalStyle, theme } from './styles/theme';

// Body1 컴포넌트
const Header0 = styled.div`
  font-size: ${props => props.theme.fontSizes.Header0};
  font-weight: ${props => props.theme.fontWeights.Header0};
  /* 추가적인 스타일을 정의할 수 있습니다. */
`;

// Body2 컴포넌트
const Header1 = styled.div`
  font-size: ${props => props.theme.fontSizes.Header1};
  font-weight: ${props => props.theme.fontWeights.Header1};
  /* 추가적인 스타일을 정의할 수 있습니다. */
`;

// Head1 컴포넌트
const Header2 = styled.div`
  font-size: ${props => props.theme.fontSizes.Header2};
  font-weight: ${props => props.theme.fontWeights.Header2};
  /* 추가적인 스타일을 정의할 수 있습니다. */
`;

// App 컴포넌트
const App = () => {
  return (
    <ThemeProvider theme={theme}>
      <GlobalStyle />
      {/* 폰트 스타일이 적용된 컴포넌트를 사용합니다. */}
      <Header0>안녕하세요.</Header0>
      <Header1>안녕하세요.</Header1>
      <Header2>안녕하세요.</Header2>
    </ThemeProvider>
  );
};

export default App;
